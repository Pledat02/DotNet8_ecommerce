@model IEnumerable<Ecommerce.Data.Product>

@{
    ViewData["Title"] = "Index";
}

<table id="productTable" class="display" style="width:100%">
    <thead>
        <tr>
            <th>
               Tên sản phẩm
            </th>
            <th>
                Hình ảnh
            </th>
            <th>
                Loại
            </th>
            <th>
                Đơn giá
            </th>
            <th>
              Mô tả
            </th>
            <th>
                Địa chỉ nhà cung cấp
            </th>
            <th>
                Số lượng tồn kho
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    <img src="~/@item.url_image"
                         width="80"
                         style="object-fit: cover"
                         height="80"
                         alt="" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.name)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Supplier.address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.quantity_in_stock)
                </td>
                <td>
                    <div class="action-buttons">
                        <button class="edit-button"
                                data-bs-toggle="modal"
                                data-bs-target="#editProductModal"
                                onclick="editProduct(@item.id_product)">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                 fill="none"
                                 viewBox="0 0 24 24"
                                 stroke-width="1.5"
                                 stroke="currentColor"
                                 style="width: 20px; height: 20px">
                                <path stroke-linecap="round"
                                      stroke-linejoin="round"
                                      d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
                            </svg>
                        </button>
                        <button class="delete-button"
                                data-bs-toggle="modal"
                                data-bs-target="#deleteProductModal"
                        onclick="deleteProduct(@item.id_product)">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                 fill="none"
                                 viewBox="0 0 24 24"
                                 stroke-width="1.5"
                                 stroke="currentColor"
                                 style="width: 20px; height: 20px">
                                <path stroke-linecap="round"
                                      stroke-linejoin="round"
                                      d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                            </svg>
                        </button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
