                                                            @for (int i = 0; i < 5; i++)
                                                            {
                                                                @if (@comment.rating > i)
                                                                {
                                                                    <i class="fa fa-star text-secondary"></i>
                                                                }
                                                                else
                                                                {
                                                                    <i class="fa fa-star"></i>
                                                                }
                                                            }
                                                        </div>
                                                    }
                                                </div>
                                                <p>
                                                    @comment.text
                                                </p>
                                            </div>
                                        </div>
                                    }
                                }

                            </div>
                        </div>
                    </div>
                    <form >
