@model Ecommerce.Data.Staff


<div class="row">
    <div class="col-md-4" style="width:100%; padding: 20px;">
        <form asp-action="Create" asp-controller="Staffs" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="employeeName" class="form-label">Tên nhân viên</label>
                <input asp-for="name_staff" class="form-control" required="required" />
                <span asp-validation-for="name_staff" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="roles" class="form-label">Quyền nhân viên</label>
                <div>
                    @foreach (var role in ViewBag.Roles)
                    {
                        <input style="width: 15px; height: 15px"
                               type="checkbox"
                               name="roles"
                               value="@role.id_role"
                              />
                        <label>@role.role_name</label>
                        <br />
                    }
                </div>
            </div>

            <div class="form-group">
                <label for="username" class="form-label">Tên đăng nhập</label>
                <input type="text" name="username" class="form-control" required="required" />
                <span asp-validation-for="Account.username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="password" class="form-label">Mật khẩu</label>
                <input type="password" name="password" class="form-control" required="required" />
                <span asp-validation-for="Account.password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="sex" class="form-label">Giới tính</label>
                <input asp-for="sex" class="form-control" required="required" />
                <span asp-validation-for="sex" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="email" class="form-label">Email</label>
                <input asp-for="email" type="email" class="form-control" required="required" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Close
                </button>
                <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
        </form>
    </div>
</div>
