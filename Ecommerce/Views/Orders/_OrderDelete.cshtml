
@model Ecommerce.Data.Order

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
       
        <dt class="col-sm-2" style="width:150px">
            @Html.DisplayNameFor(model => model.order_time)
        </dt>
        <dd class="col-sm-10" style="width:300px">
            @Html.DisplayFor(model => model.order_time)
        </dd>

        <dt class="col-sm-2" style="width:150px">
            @Html.DisplayNameFor(model => model.status)
        </dt>
        <dd class="col-sm-10" style="width:300px">
            @Html.DisplayFor(model => model.status)
        </dd>
         <dt class = "col-sm-2" style="width:150px">
            Voucher
        </dt>
        <dd class = "col-sm-10" style="width:150px">
            @Html.DisplayFor(model => model.Voucher_User.id_voucher)
        </dd>
          
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <div class="modal-footer">
            <input type="hidden" asp-for="id_order" />
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                Close
            </button>
            <button type="submit" value="Delete" class="btn btn-danger">Delete</button>
        </div>
    </form>
</div>
