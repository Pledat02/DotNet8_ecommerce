
@model Ecommerce.Data.Order

<div class="row">
    <div class="col-md-4" style="width:100%; padding: 20px;">
        <form asp-action="Create">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="order_time" class="control-label"></label>
                <input asp-for="order_time" class="form-control" />
                <span asp-validation-for="order_time" class="text-danger"></span>
            </div>
           
           
            <div class="form-group">
                <label asp-for="status" class="control-label"></label>
                <input asp-for="status" class="form-control" />
                <span asp-validation-for="status" class="text-danger"></span>
            </div>
         
            <div class="modal-footer" style="display:flex">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Close
                </button>
                <button type="submit" value="Create" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>
